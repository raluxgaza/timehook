
<h1>
  <%= Date.civil(params[:from_date][:year].to_i, params[:from_date][:month].to_i, 
    params[:from_date][:day].to_i).to_s(:long) %> - 
  <%= Date.civil(params[:to_date][:year].to_i, params[:to_date][:month].to_i, 
    params[:to_date][:day].to_i).to_s(:long) %>
</h1>

<%= hidden_field_tag :f_date, params[:from_date] %>
<%= hidden_field_tag :t_date, params[:to_date] %>

<h2>
  <a href="<%= activities_path %>">
  <%= current_user.full_name.capitalize %> | <%= @summary_hours %>
</a>
</h2>
