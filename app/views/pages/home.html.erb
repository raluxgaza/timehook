<% if signed_in? %>

  <table class="front" summary="For signed-in users">
    <tr>
      <td>
        <%= link_to 'Add new hours', 'activities/new', :class => 'signup_button round' %>
      </td>
      <td>
        <%= link_to 'View past hours', activities_path, :class => 'signup_button round' %>
      </td>
    </tr>
    <tr>
      <td><%= link_to 'Profile', '#', :class => 'signup_button round' %></td>
    </tr>
  </table>

<% else %>

  <h1>Welcome to Timehook</h1>
  <h3>West London College Timesheet Application</h3>

  <%= link_to 'Sign in', signin_path, :class => 'signup_button round' %>

<% end %>

